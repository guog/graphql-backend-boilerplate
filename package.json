{
  "name": "graphql-backend-boilerplate",
  "version": "1.0.0",
  "description": "Graphql back-end service boilerplate based on node and typescript.",
  "repository": "github:guog/graphql-backend-boilerplate.git",
  "bin": "dist/index.js",
  "main": "dist/index.js",
  "pkg": {
    "options": [
      "experimental-modules"
    ],
    "targets": [
      "node14-win-x64",
      "node14-linux-x64",
      "node14-macos-x64"
    ],
    "outputPath": "bin",
    "assets": [
      "node_modules/altair-static/build/dist/**/*"
    ]
  },
  "author": {
    "name": "guog",
    "email": "guog@live.cn",
    "url": "https://github.com/guog"
  },
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=16.10.0",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@paljs/cli": "^5.3.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/chance": "^1.1.3",
    "@types/cors": "^2.8.13",
    "@types/express": "4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.192",
    "@types/lru-cache": "^7.6.1",
    "@types/node": "^18.15.11",
    "@types/validator": "^13.7.14",
    "@types/ws": "^8.5.4",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-ws": "^1.0.20",
    "cross-fetch": "^3.1.5",
    "dotenv-cli": "^5.1.0",
    "graphql-request": "^4.2.0",
    "graphql-tag": "^2.12.6",
    "jest": "^27.5.1",
    "pkg": "^5.6.0",
    "prettier": "^2.6.2",
    "prisma": "^4.12.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@apollo/server": "^4.6.0",
    "@graphql-tools/schema": "^8.3.7",
    "@paljs/nexus": "^5.3.0",
    "@prisma/client": "^4.12.0",
    "altair-express-middleware": "^5.0.22",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "chance": "^1.1.11",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fs-extra": "^10.0.1",
    "graphql": "^16.6.0",
    "graphql-middleware": "^6.1.33",
    "graphql-shield": "^7.6.5",
    "i18next": "^21.6.16",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "lru-cache": "^7.8.1",
    "ms": "^2.1.3",
    "nanoid": "^3.3.2",
    "nexus": "^1.3.0",
    "nexus-validate": "^1.4.0",
    "subscriptions-transport-ws": "^0.11.0",
    "validator": "^13.9.0",
    "winston": "^3.8.2",
    "yup": "^0.32.11"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "start": "node dist",
    "dev": "ts-node-dev --respawn --transpile-only --files src/index.ts",
    "clean": "rm -rf dist/* bin/*",
    "build": "pnpm run clean && pnpm run generate && tsc",
    "build:pkg": "rm -rf dist/* bin/* && prisma generate && tsc && node scripts/pre-pkg.js && pkg --compress GZip .",
    "format": "prettier --write --ignore-unknown './src/**/*.{ts,md}'",
    "generate:code": "rm -rf ./.generated && pal g && prettier --write './.generated/**/*.ts'",
    "generate": "pnpm run generate:prisma && pnpm run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "postinstall": "pnpm run generate",
    "db-push": "prisma db push",
    "db-seed": "prisma db seed",
    "studio": "prisma studio",
    "db-seed:test": "dotenv -e ./.env.test -- prisma db seed",
    "db-push:test": "dotenv -e ./.env.test -- prisma db push --accept-data-loss",
    "test": "dotenv -e ./.env.test -- jest --runInBand --coverage --detectOpenHandles --forceExit"
  }
}
