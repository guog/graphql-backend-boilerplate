// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  //binaryTargets = ["darwin", "windows", "linux-musl", "debian-openssl-1.0.x", "debian-openssl-1.1.x", "rhel-openssl-1.0.x", "rhel-openssl-1.1.x", "linux-arm64-openssl-1.0.x", "linux-arm64-openssl-1.1.x"]
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// User Account
model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  disabled  Boolean  @default(false)
  name      String   @unique
  password  String
  nickName  String
}

// Fields Demo
model FieldDemo {
  id          String    @id @default(cuid())
  theBigInt   BigInt?   @default(0)
  theDateTime DateTime? @default(now())
  theBytes    Bytes?    @default("abc")
  theDecimal  Decimal?  @default(0.5)
  theJson     Json?     @default("{\"key\":\"value\"}")
  theString   String?   @default("")
  theInt      Int?      @default(0)
  theBoolean  Boolean?  @default(false)
  theFloat    Float?    @default(0.5)
}